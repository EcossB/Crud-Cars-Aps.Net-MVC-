
@model List<Segundo_parcial_CRUD.Models.Auto>
@{
    ViewData["Title"] = "Home Page";
}


<style>
    body {
        background: #e35869;
        font-family: 'Rubik', sans-serif;
    }</style>

<div class="text-center">
    <h1 class="display-4">Welcome Foreigns </h1>
    <p>This Application was created by Erwing Coss 2021-1869</p>
</div>


<div class="card">
    <div class="card-header">
        <h5>Lista de Automoviles</h5>
    </div>
    <div class="card-body">
        <a class=" btn btn-success btn-sm" asp-action="Auto_Detalle" asp-controller="Home" asp-route-idAuto="0"> Crear Nuevo</a>
        <hr />
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Marca Vehiculo</th>
                    <th>Imagen del vehiculo</th>
                    <th>Modelo</th>
                    <th>Ano</th>
                    <th>Estado</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model)
                {
                    <tr>
                        <td>@item.Marca</td>
                        <td><img src=@item.ImgRuta style="width:300px; height:200px;"></td>
                        <td>@item.Modelo</td>
                        <td>@item.Anio</td>
                        <td>@item.oEstatus.Descripcion</td>
                        <td>
                            <a class="btn btn-primary btn-sm" asp-action="Auto_Detalle" asp-controller="Home" asp-route-idAuto="@item.Idauto"> Editar</a>
                            <a class="btn btn-danger btn-sm" asp-action="Eliminar" asp-controller="Home" asp-route-idAuto="@item.Idauto"> Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>