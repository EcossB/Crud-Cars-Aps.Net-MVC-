@model Segundo_parcial_CRUD.Models.ViewModels.AutoVM

@{
    ViewData["Title"] = "Auto_Detalle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model.oAuto.Idauto == 0)
{
    <h1> Agregar Nuevo Vehiculo</h1>
} 
else{
    <h1> Editar Vehiculo</h1>
}


<div class="row">
    <div class="col-sm-4">

        <form asp-action="Auto_Detalle" asp-controller="Home" method="post">
            <input type="hidden" asp-for="oAuto.Idauto"/> <!--aqui le estoy diciendo que este texto solo funcionara para el id del auto-->
       

            <!--Contenedor para la marca-->
            <div class="mb-2">
                <label class="form-label" asp-for="oAuto.Marca"> Marca del Vehiculo</label>
                <input class="form-control form-control-sm" asp-for="oAuto.Marca" type="text"/> <!-- el target de este imput es el campo marca de dbcontext -->
            </div>

            <!--Contenedor para la ruta-->
            <div class="mb-2">
                <label class="form-label" asp-for="oAuto.ImgRuta"> Ruta de la imagen</label>
                <input class="form-control form-control-sm" asp-for="oAuto.ImgRuta" type="text" /><!-- el target de este imput es el campo marca de dbcontext -->
                
            </div>

            <img src="@Model.oAuto.ImgRuta" />

            <!--Contenedor para la modelo-->
            <div class="mb-2">
                <label class="form-label" asp-for="oAuto.Modelo"> Modelo del Vehiculo</label>
                <input class="form-control form-control-sm" asp-for="oAuto.Modelo" type="text"/> <!-- el target de este imput es el campo marca de dbcontext -->
            </div>

            <!--Contenedor para la ano-->
            <div class="mb-2">
                <label class="form-label" asp-for="oAuto.Anio"> Ano del vehiculo</label>
                <input class="form-control form-control-sm" asp-for="oAuto.Anio" type="text"/> <!-- el target de este imput es el campo marca de dbcontext -->
            </div>

            <!--para el estatus-->
            <div class="mb-3">
                <label class="form-label" asp-for="oAuto.MiEstatus"> Estado del vehiculo</label>
                <select class="form-select form-select-sm" asp-for="oAuto.MiEstatus" asp-items="@Model.oListaEstatus">
                    <option selected disabled>-- Selecciona el estado --</option>

                </select><!-- el target de este imput es el campo marca de dbcontext -->
            </div>

            <div class="mb-2">
                @if (Model.oAuto.Idauto == 0)
                {
                    <button class="btn btn-primary btn-sm w-25 " type="submit"> Crear</button>
                }
                else
                {
                    <button class="btn btn-primary btn-sm w-25 " type="submit"> actualizar</button>
                }
                <a class=" btn btn-dark btn-sm" asp-action="index" asp-controller="Home"> Volver</a>
            </div>

        </form>

        <!--contenedor para la imagen
        <div class="img-thumbnail">
            <img src=oAuto.ImgRuta />
        </div>
        -->
    </div>
</div>